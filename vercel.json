{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": ["public/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api-docs",
      "dest": "server.js"
    },
    {
      "src": "/api-docs/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}